@model DMS.Web.viewmodel.DocumentViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-primary">Edit Page</h1>

<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Edit" asp-controller="Documents" enctype="multipart/form-data">
            <input type="hidden" asp-for="FileName" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DocumentId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label text-danger"></label>
                <input asp-for="Title" class="form-control" placeholder="change your document title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label text-danger"></label>
                <input asp-for="Description" class="form-control" placeholder="Change your document designation" />
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label text-danger"></label>
                <input asp-for="Author" class="form-control" placeholder="change your author" />
                <span asp-validation-for="Author"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label text-danger"></label>
                <input asp-for="Content" class="form-control" placeholder="change your content" />
                <span asp-validation-for="Content"></span>
            </div>

            <div class="form-group text-center ">
                <input type="submit" value="Save changes" class="btn-success col-md-12" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
